extends layout

block content
   div#container 
    div#accordion.panel-group
     h3 Selecione o estado desejado:
     - var posicaoEstado = 1
     each lista,estado in mapreduce

      div.panel.panel-info
       div.panel-heading
        h4.panel-title
         a(data-toggle='collapse', data-parent='#accordion', href=('#' + estado))
          | #{estado}
       div(id=estado).panel-collapse.collapse
        form(name = 'mapreduceDetalhado', method = 'post', action = '/cacheInformation')
         table.table.table-hover
          tbody
           tr
            td.titulo Campos dispon√≠veis:
            td.titulo Quantidade: 
             i#example.icon-info-sign(title='Esta quantidade refere-se ao total de registros que possuem o campo preenchido.', data-toggle='tooltip')
            td.titulo 
          each item in lista
           div.panel-body
            tr 
             td.capitalize #{item.chave.toUpperCase()}
             td.capitalize #{item.quantidade}
             td
              input(type='checkbox', name='campos', value='#{item.chave}', class='CheckBoxName' + posicaoEstado, id='#{estad}o}')
         input(type='hidden', name='estado', value = '#{estado}') 
         button.btn.btn-default(type='submit', onclick="return verificaChecks()") Pesquisar
          - posicaoEstado++ 